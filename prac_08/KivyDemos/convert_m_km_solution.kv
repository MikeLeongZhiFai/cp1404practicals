
BoxLayout:
    orientation:'vertical'

    BoxLayout:
        orientation:'horizontal'

        TextInput:
            id: input_miles_amount
            text: "34"
            font_size:  100

        BoxLayout:
            orientation:'vertical'

            Button:
                text: "Up"
                font_size: 75
                on_press: app.handle_update(1)

            Button:
                text: "Down"
                font_size: 75
                on_press: app.handle_update(-1)

    Button:
        text: "Convert miles to km"
        font_size: 60
        on_press: app.calculate_value()

    Label:
        id: output_kilometer
        font_size: 60
        text: " "
